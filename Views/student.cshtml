<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="../Content/css/styles.css">
		<title>Welcome to University</title>
	</head>
	<body>
    <h1>Here are the courses that the student has enrolled into:</h1>
    <h2>Student: @Model["student"].GetName()</h2>
    <hr />
    @if (@Model["CourseStudents"].Count != 0)
    {
      <ul>
        @foreach (var course in @Model["CourseStudents"])
        {
          <li>@course.GetName()</li>
          <li>@course.GetNumber()</li>
        }
      </ul>
    }
    <h4>Add a course to this student:</h4>
    <form action='/student/add_course' method='post'>
      <input id='student-id' name='student-id' type='hidden' value='@Model["student"].GetId()'>
      <label for='course-id'>Select a course</label>
      <select id='course-id' name='course-id' type='text'>
        @foreach (var course in @Model["allCourses"])
        {
          <option value='@course.GetId()'>@course.GetName(), @course.GetNumber()</option>
        }
      </select>
      <button type='submit'>Add</button>
    </form>
    <p><a href="/">Return to Main Page</a></p>

  </body>
</html>
